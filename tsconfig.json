{
    "compilerOptions": {
      "target": "es2016",
      "module": "ESNext",
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "./dist",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react-jsx",
      "lib": ["DOM", "DOM.Iterable", "ESNext"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }